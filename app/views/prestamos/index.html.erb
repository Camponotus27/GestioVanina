<p id="notice"><%= notice %></p>

<h1>Prestamos</h1>

<table>
  <thead>
    <tr>
      <th>Importe</th>
      <th>Interes</th>
      <th>Tipo pago</th>
      <th>Subtipo pago</th>
      <th>Cuotas</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prestamos.each do |prestamo| %>
      <tr>
        <td><%= prestamo.importe %></td>
        <td><%= prestamo.interes %></td>
        <td><%= prestamo.tipo_pago %></td>
        <td><%= prestamo.subtipo_pago %></td>
        <td><%= prestamo.cuotas %></td>
        <td><%= prestamo.total %></td>
        <td><%= link_to 'Show', prestamo %></td>
        <td><%= link_to 'Edit', edit_prestamo_path(prestamo) %></td>
        <td><%= link_to 'Destroy', prestamo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="w3-row-padding w3-black " style="padding-top: 20px">

  <div class="w3-half" style="padding-right: 10px">
    <%= button_to 'Salir', root_path , :method => :get , class: "w3-green  w3-round-large w3-btn caja_boton"  %>
  </div>
  
  <div class="w3-half">
    <%= button_to 'Nuevo', new_prestamo_path , :method => :get , class: "w3-green  w3-round-large w3-btn caja_boton"  %>
  </div>
</div>





</div>

