<div class="margen_pagina">
  
  <p id="notice"><%= notice %></p>



<div style="margin: 10 xp"> <h1>Cliente</h1> </div> 

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Run</th>
      <th>Confianza</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.run %></td>
        <td><%= persona.confianza %></td>
        <td><%= persona.comentario %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="w3-row-padding w3-black " style="padding-top: 20px">

  <div class="w3-half" style="padding-right: 10px">
    <%= button_to 'Salir', root_path , :method => :get , class: "w3-green  w3-round-large w3-btn caja_boton"  %>
  </div>
  
  <div class="w3-half">
    <%= button_to 'Nuevo', new_persona_path , :method => :get , class: "w3-green  w3-round-large w3-btn caja_boton"  %>
  </div>
</div>





</div>

